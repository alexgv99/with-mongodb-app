{
	"env": {
		"browser": true,
		"node": true,
		"jest": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"redux-saga",
		"react",
		"import",
		"react-hooks",
		"import-helpers"
	],
	"rules": {
		"arrow-parens": 0,
		"arrow-body-style": [
			2,
			"as-needed"
		],
		"class-methods-use-this": 0,
		"comma-dangle": 0,
		"eqeqeq": [
			"error",
			"smart"
		],
		"max-len": 0,
		"newline-per-chained-call": 0,
		"no-confusing-arrow": 0,
		"no-console": [
			"error",
			{
				"allow": [
					"debug",
					"error"
				]
			}
		],
		"no-use-before-define": 0,
		"no-mixed-spaces-and-tabs": [
			"warn",
			"smart-tabs"
		],
		"prefer-template": 2,
		"react/button-has-type": 1,
		"react/display-name": [
			1,
			{
				"ignoreTranspilerName": true
			}
		],
		"react/forbid-prop-types": 0,
		"react/require-default-props": 0,
		"react/require-extension": 0,
		"react/self-closing-comp": 0,
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "error",
		"redux-saga/no-yield-in-race": 2,
		"redux-saga/yield-effects": 2,
		"require-yield": 0,
		"jsx-quotes": [
			"warn",
			"prefer-double"
		],
		"quotes": [
			"warn",
			"single"
		],
		"import/named": 2,
		"import/namespace": 2,
		"import/default": 2,
		"import/export": 2,
		"import-helpers/order-imports": [
			"warn",
			{
				"newlinesBetween": "always", // new line between groups
				"groups": [
					"/^react$/",
					"/^prop-types$/",
					"/^react/",
					"module",
					"/^assets/",
					"/^config/",
					"/^components/",
					"/^containers/",
					"/^custom-hooks/",
					"/^environments/",
					"/^utils/",
					"/^index$/",
					[
						"parent",
						"sibling",
						"index"
					]
				],
				"alphabetize": {
					"order": "asc",
					"ignoreCase": true
				}
			}
		]
	},
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "detect",
			"flowVersion": "0.53"
		},
		"propWrapperFunctions": [
			"forbidExtraProps"
		],
		"import/resolver": {
			"node": {
				"paths": [
					"src"
				],
				"babel-module": {},
				"moduleDirectory": [
					"node_modules",
					"src/"
				]
			}
		}
	}
}
